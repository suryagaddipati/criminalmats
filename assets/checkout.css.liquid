/* Checkout CSS */

body {
  background-color:{{ settings.bg_color }};
  {% if settings.use_bg_image  %}
  background-image:url("{{ 'bg.png' | asset_url }}");
  {% if settings.bg_stretched %}
  background-repeat:no-repeat;
  background-attachment:fixed; 
  -webkit-background-size:cover;
  -moz-background-size:cover;
  -o-background-size:cover;
  background-size:cover;
  {% else %}
  background-repeat:{{ settings.repeat_bg }};
  {% if settings.bg_fixed %}
  background-attachment:fixed; 
  {% endif %}
  {% endif %}
  background-position:{{ settings.bg_pos }};
  {% endif %}
  font-family:{{ settings.text_font }};
  color:{{ settings.global_text_font_color }};
}

#container {
  width:884px;
  margin:0px auto 30px;
  padding:0 40px;
  {% if settings.page_bg_transparent %}
  background:transparent;
  {% else %}
  background:{{ settings.page_bg_color }};
  {% endif %}
  {% if settings.use_bg_image and settings.page_bg_transparent == false  %}
    -moz-box-shadow: 0px 0px 4px rgba(0,0,0,0.2);
    -webkit-box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.2);
    box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.2);
  {% endif %}
  {% if settings.page_bg_transparent == false and settings.bg_color != settings.page_bg_color  %}
    -moz-box-shadow: 0px 0px 4px rgba(0,0,0,0.2);
    -webkit-box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.2);
    box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.2);
  {% endif %}
}

#header, #main, #footer {
  width:884px;
  padding:0;
  margin:0;
  background:none;
}

{% if settings.use_bg_image and settings.page_bg_transparent == false  %}
#footer, #container.slim #footer { 
  padding-bottom:20px !important; 
}
{% endif %}

{% if settings.page_bg_transparent == false and settings.bg_color != settings.page_bg_color  %}
#footer, #container.slim #footer { 
  padding-bottom:20px !important; 
}
{% endif %}

#header h1 {
  padding-left:0px;
}

#content {
  padding:0;
}

#content h3 {
  color:{{ settings.global_heading_font_color }};
  margin-top:30px;
}

{% if settings.use_logo %}

h1#tagline .title {
  display:none;
}

#logo {
  width:884px;
  display:block;
  margin:0 auto -70px;
  padding:0;
  height:296px;
  background:url("{{ 'logo.png' | asset_url }}") no-repeat 50% 50%;
}    

{% else %}

h1#tagline {
  margin:0;
  padding:0;
  font-family:{{ settings.logo_font }};
}

.title {
  display:block;
  width:100%;
  padding:82px 0 46px;
  font-size:25px;
  border-bottom:1px solid {{ settings.primary_border }};
  color:{{ settings.global_heading_font_color }};
} 

{% endif %}

/* Thank You page should not use logo. */

#container.slim h1#tagline .title { display: block; margin: 0; }
#container.slim #logo { display: none }

h1 span.subtitle {
  display:block;
  font-size:35px;
  line-height:35px;
  margin-top:56px;
  margin-bottom:34px;
  color:{{ settings.global_text_font_color }};
}


/* Thumbs / Order Details */

#overview {
  padding:0;
  background:none;
  border-bottom:1px solid {{ settings.primary_border }};
}   

#overview .hint {
  color:{{ settings.global_text_font_color }};
  font-size:14px;
  display:block;
}

#products {
  border-right:1px solid {{ settings.primary_border }};
  padding-bottom:94px;
}

#products h2 {
  font-size:16px;
  margin-bottom:42px;
  font-family:{{ settings.headings_font }};
  font-weight:400;
  color:{{ settings.global_heading_font_color }};
}

#wallet {
  padding:45px 10px 45px 40px;
  background-color:transparent !important;
  text-align:left;
}

#wallet br {
  display:none;
}

#cost, #order-num {
  font-size:48px;
  color:{{ settings.global_small_link_color }};
  font-weight:700;
  font-family:{{ settings.headings_font }};
  margin-bottom:18px;
}

#steps {
  font-family:{{ settings.headings_font }};
  font-style:normal;
  margin-top:8px;
  display:block;
}

#thumbs div { 
  border:none;
  margin-right:6px;
}

#thumbs h3 {
  color:{{ settings.global_link_color }};
  font-size:14px;
  margin-bottom:6px;
  font-family:{{ settings.headings_font }};
}

#thumbs span {
  color:{{ settings.global_small_link_color }};
  line-height:17px;
}

#thumbs td { 
  padding-bottom:40px;
  padding-right:20px;
  vertical-align:top; 
}

.plist-variant-title, .plist-line-price {
  font-size:12px !important;
  font-family:{{ settings.accent_font }};
  font-style:italic;
}


/* E-Mail */
#email {
  background:transparent;
  border:none;
  padding:39px 0 44px;
  margin:0;
  border-bottom:1px solid {{ settings.primary_border }};
  color:#999999;
}

#email a {
  color:{{ settings.global_link_color }};
  text-decoration:none;
}

#email a:hover { color:{{ settings.global_hover_color }}; }

#email label {
  font-size:19px;
  line-height:19px;
  margin-bottom:20px;
  font-family:{{ settings.headings_font }};
  color:{{ settings.global_heading_font_color }};
}

h4.active-customer {
  font-size:14px;
  font-family:{{ settings.headings_font }};
  color:#333333;
  padding:0;
  margin:0;
}

span.sign-in-message {
  font-size:12px;
  font-family:{{ settings.accent_font }};
  font-style:italic;
  color:{{ settings.global_small_link_color }};
  margin-left:12px;
  font-weight:400;
}

span.sign-in-message a {
  color:{{ settings.global_link_color }};
  text-decoration:none;
  font-weight:400;
}

#email input, .form td input.short, #billing_address_address1, #billing_address_address2,#shipping_address_address1, #shipping_address_address2, #billing_address_city, input.medium, #credit_card_first_name, #credit_card_last_name, #credit_card_number, #credit_card_verification_value, #create-account form input#password, #create-account form input#password_confirmation, #discount_code {
  border:1px solid {{ settings.input_border }};
  -webkit-border-radius:3px;
  -moz-border-radius:3px;
  border-radius:3px;
  outline:0;
  background-color:transparent;
  color:{{ settings.input_text }};
  padding:8px 12px;
  font-size:14px;
  width:250px;
  -webkit-appearance:none;
}

input#billing_address_province, input#shipping_address_province {
  border:1px solid #cccccc;
  -webkit-border-radius:3px;
  -moz-border-radius:3px;
  border-radius:3px;
  outline:0;
  background-color:transparent;
  padding:8px 12px;
  color:{{ settings.input_text }};
  -webkit-appearance:none;
}

#billing_address_province, #shipping_address_province {
  margin-bottom:20px;
}

/* Address */

.field-with-errors {
  background:none;
  border:none;
  padding:0px !important;
  display:inline-block;
}

.field-with-errors .error-message {
  font-weight:400;
  font-style:italic;
  color:#FB8077;
}

.field-with-errors input {
  margin-top: 4px !important;
  border: 1px solid red !important;
  background-color: #FCEDEC !important;
  border: 1px solid #FB8077 !important;
  color: #333 !important;
}

#addresses .field-with-errors input {
  margin-bottom:20px;
}

#addresses {
  background:transparent;
  margin:0;
  border:none;
  padding:36px 0 38px;
  border-bottom:1px solid {{ settings.primary_border }};
}

.gright {
  padding-left:14px;
}

.group h3, .pgroup h3 {
  font-size:19px;
  font-weight:700;
  color:{{ settings.global_heading_font_color }};
  border-bottom:none;
  margin-bottom:25px;
  font-family:{{ settings.headings_font }};
  margin-top:0 !important;
}

.form td.lbl {
  padding-top:14px;
  padding-bottom:34px;
  width:117px;
}

.form td.lbl label {
  font-size:14px;
  color:{{ settings.global_text_font_color }};
  font-weight:400 !important;
}

.form ul.inline li label, #billing-is-shipping label {
  font-weight:400 !important;
  color:{{ settings.global_text_font_color }};
  font-size:14px;
  margin-bottom:16px;
}

#billing-is-shipping td {
  padding-top:10px;
}

.multiple_address_selection td {
  padding:0px 5px 34px 0px;
}

.multiple_address_selection td select {
  margin:0;
}

#billing_address_province_li input, #shipping_address_province input {
  margin-top:2px;
  margin-top:-1px\0/;
}

*+html #billing_address_province_li input, #shipping_address_province input {
  margin-top:-1px;
}

@-moz-document url-prefix() {
  #billing_address_province_li input, #shipping_address_province input {
    margin-top:0px;
  }
}

#billing_address_country, #shipping_address_country {
  margin-bottom:20px;
}

.address-notification {
  background-color:#fcedec;
  border:1px solid #fb8077;
  font-size:14px;
  color:{{ settings.global_text_font_color }};
  text-align:left;
  padding:8px 14px 9px;
  margin-top:30px;
  -webkit-border-radius:3px;
  -moz-border-radius:3px;
  border-radius:3px;
}

@-moz-document url-prefix() {
  .address-notification {
    padding:6px 14px 9px;
  }
}

#buttons {
  background:transparent;
  border-top:none;
  border-bottom:none;
  padding:29px 0 0 0;
}        	

input#commit-button, input#complete-purchase, #create-account-btn, #discounts-body input[type=submit] {
  padding:11px 13px;
  background-color:{{ settings.global_button_color }};
  color:{{ settings.global_button_font_color }};
  font-weight:700;
  -webkit-border-radius:4px;
  -moz-border-radius:4px;
  border-radius:4px;
  border:none;
  outline:none;
  font-size:14px;
  position:relative;
  -webkit-text-stroke:0.1px;
  -webkit-font-smoothing:antialiased;
  cursor:pointer;
  -webkit-appearance:none;
}

#discounts-body input[type=submit] {
  padding:10px 13px;
}

input#commit-button:hover, input#complete-purchase:hover, #create-account-btn:hover, #discounts-body input[type=submit]:hover {
  background-color:{{ settings.global_button_color_hover }};
}

#cancel-purchase, #buttons small {
  font-size:14px;
  color:{{ settings.global_text_font_color }};
  margin-left:6px;
}

*+html #cancel-purchase {  position:relative; top:-11px;}

#cancel-purchase a, #buttons small a {
  color:{{ settings.global_link_color }};
  text-decoration:none;
}

#cancel-purchase a:hover, #buttons small a:hover { color:{{ settings.global_hover_color }}; }

.group {
  background:transparent;
  padding:0;
  border:none;
}

.group p {
  font-size:14px;
  color:{{ settings.global_text_font_color }};
}

.group p.sst {
  margin:25px 0 0 0;
}

#payment {
  padding:39px 0;
  border-bottom:1px solid {{ settings.primary_border }};
  margin-bottom:39px;
}

#payment .group {
  margin:0;
}

.group .hint {
  line-height:23px;
  max-width:586px;
}

#credit-card-info label {
  font-size:14px;
  font-weight:400 !important;
  margin-bottom:10px;
  display:inline-block;
}

#credit-card-info input {
  margin-right:10px;
}

#credit_card_first_name, #credit_card_last_name {
  width:170px;
  margin-bottom:20px;
}

#credit_card_first_name {
  margin-right:38px !important;
}

#credit_card_number {
  width:408px;
  margin-bottom:20px;
}

#credit_card_verification_value {

/* Orders */

.template-customersorder .content {
    margin-bottom:60px;
}

#order_address {
    float:left;
    width:180px;
    padding-right:39px;
}

    #order_details_label {
        font-size:20px;
        color:{{ settings.global_heading_font_color }};
        margin:0 0 28px 0;
        font-family:{{ settings.headings_font }};
    }
    
        .order_section_title {
            font-size:14px;
            color:{{ settings.global_text_font_color }};
            margin:0 0 8px 0;
            font-family:{{ settings.headings_font }};
        }
        
        .address.note {
            margin:0 0 22px 0;
        }
        
        .address.note p {
            font-size:14px;
            line-height:21px;
            color:{{ settings.global_text_font_color }};
            margin:0;
        }

#order_details {
    width:640px;
    float:right;
}

    #order_details th {
        font-size:16px;
        font-weight:700;
        color:{{ settings.global_heading_font_color }};
        padding-bottom:15px;
        padding-top:0;
        padding-left:0;
        text-align:right;
        font-family:{{ settings.headings_font }};
    }
    
    #order_details th.first {
        text-align:left;
    }
    
    #order_details th.last {
        text-align:right;
    }
    
    #order_details th.center {
        text-align:center;
    }
    
    #order_details tr { 
        border-bottom:1px solid {{ settings.primary_border }}; 
        padding:26px 0;
    }
    
    #order_details tr.last { border-bottom:none; }
    
        #order_details td {
            padding:21px 0;
            font-size:14px;
            text-align:right;
            line-height:21px;
        }
        
        #order_details p {
            margin:0.5em 0 0;
        }
        
        #order_details td.first { 
            padding-top:21px;
            padding-bottom:21px;
        }
            
            #order_details td.first a { color:{{ settings.global_link_color }}; }
            #order_details td.first a:hover { color:{{ settings.global_hover_color }}; }
    
        #order_details .product {
            width:260px;
            padding-right:40px;
            font-family:{{ settings.headings_font }};
            text-align:left;
        }
        #order_details .money {
            width:auto;
            padding-right:70px;
        }
        #order_details .quantity {
            width:auto;
            padding-right:40px;
        }
        #order_details .total {
            width:auto;
            padding-right:0px;
        }
        
        #order_details .order_summary {
            border-bottom:none !important;
        }
        
            #order_details .order_summary td {
                padding:0px 0px 24px;
            }
            
            #order_details .order_summary.first td {
                padding:24px 0px 24px;
            }
            
            #order_details .order_summary.last td {
                padding-top:24px;
            }
        
        #order_details .order_summary.order_total {
            border-top:1px solid {{ settings.primary_border }};
            font-weight:700;
        }
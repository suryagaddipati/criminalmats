{% layout settings.customer_layout %}

<div id="customer-accounts"  class="content clearfix customer">

  <!-- Customer Account Activation -->
  <div id="customer-account-activation">
    <div class="page-header">
     <h1>Activate Account</h1>
    </div>
    
    <p class="note accent-text">Create your password to activate your account</p>

    {% form 'activate_customer_password' %}
    
    {{ form.errors | default_errors }}

    <div id="password" class="clearfix form-row">
      <label class="large" for="password">Password</label>
      <input type="password" value="" name="customer[password]" id="customer_password" class="large styled-input" size="16" />
    </div>
    <div id="password_confirm" class="clearfix form-row">
      <label class="large" for="password_confirmation">Password Confirmation</label>
      <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large styled-input" size="16" />
    </div>
    <div class="action-bottom clearfix">
      <input class="btn styled-submit" type="submit" value="Activate Account" />
      <span class="note">or</span>
      <input type="submit" class="cancel un-styled-btn note" name="decline" id="customer_decline" value="Decline Invitation" />
    </div>
    {% endform %}
  
  </div><!-- #customer-account-activation -->
  
</div><!-- #customer-accounts -->